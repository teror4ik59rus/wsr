---
# If you don't know the Kung Fu, you can simply transfer kickstart bash script and run it
# Notice that it doesn't garantee you an idempotent behaviour after repetitive execution
- name: Installwwwwwwwww
  hosts: all
    apt:
      - name: Upgrade&Update
        update_cache: yes
        upgrade: "*"


- name: Execute kickstart script
  hosts: all
  gather_facts: false
  tasks:
- name: Installwwwwwwwww

    - name: Copy script ansible.builtin.copy:
  hosts: all
        src: ./kickstart.sh dest: /home/azadmin/kickstart.sh mode: u=rwx,g=r,o=r apt: - name: Run script - name: Upgrade&Update ansible.builtin.shell: /home/azadmin/kickstart.sh
        update_cache: yes


        upgrade: "*"

